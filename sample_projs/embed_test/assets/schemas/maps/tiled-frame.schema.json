{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Tiled Animation Frame",
    "description": "Schema for a single frame in a tile animation.",
    "type": "object",
    "properties": {
        "duration": {
            "type": "integer",
            "description": "Frame duration in milliseconds"
        },
        "tileid": {
            "type": "integer",
            "description": "Local tile ID representing this frame"
        }
    },
    "required": [
        "duration",
        "tileid"
    ]
}